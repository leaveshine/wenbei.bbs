<%-include header%>
<div style="width:1024px;margin:1em auto;">
    <div style="border:2px solid green;width:720px;float:left">
        <ul class="horul">
            <li>最新</li>
            <li>最热</li>
            <li>未回答</li>
        </ul>
        <table class="table">
            <tbody class="answer">
            <%if(rs!=undefined){rs.forEach(function (name) {%>
            <tr class="pagecounts">
                <td>
                    <div><%=name["renum"]%><br/>回答</div>
                </td>
                <td><%=name["looknum"]%><br/>浏览</td>
                <td><a href="/question/detail?qid=<%=name['qid']%>" target="_blank"><%=name["title"]%></a></td>
            </tr>
            <%})}%>
            <tr class="pagecounts">
                <td colspan="3" align="center">
                    总共<%=count%>条记录，
                    第<%=page%>/<%=countPage%>页，
                    <%if(page>1){%>
                    <a href="/?page=1">首页</a>
                    <a href="/?page=<%=page-1%>">上一页</a>
                    <%}%>
                    <%if(page<countPage){%>
                    <a href="/?page=<%=page+1%>">下一页</a>
                    <a href="/?page=<%=countPage%>">尾页</a>
                    <%}%>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div style="border:2px solid green;width:300px;float:right">
        <table class="table">
            <caption>排行榜</caption>
            <tbody>
            <tr>
                <td>1</td>
                <td>Bangalore</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Mumbai</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Bangalore</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<%include loginModal%>
</body>
</html>
